                                        <m:mrow>
                                          <m:mtext>âm</m:mtext>
                                        </m:mrow>
                                      </m:mstyle>
                                    </m:mrow>
                                  </m:mstyle>
                                </m:msub>
                                <m:mtext>.</m:mtext>
                                <m:mtext>1000</m:mtext>
                              </m:mrow>
                              <m:msub>
                                <m:mi>ω</m:mi>
                                <m:mstyle fontsize="8pt">
                                  <m:mrow>
                                    <m:mstyle fontstyle="italic">
                                      <m:mrow>
                                        <m:mtext>âm</m:mtext>
                                      </m:mrow>
                                    </m:mstyle>
                                  </m:mrow>
                                </m:mstyle>
                              </m:msub>
