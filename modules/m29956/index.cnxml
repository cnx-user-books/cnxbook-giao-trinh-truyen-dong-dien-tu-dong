                                    <m:mstyle fontsize="8pt">
                                      <m:mrow>
                                        <m:mstyle fontstyle="italic">
                                          <m:mrow>
                                            <m:mtext>âm</m:mtext>
                                          </m:mrow>
                                        </m:mstyle>
                                      </m:mrow>
                                    </m:mstyle>
                                  </m:msub>
                                </m:mrow>
                                <m:mtext>.</m:mtext>
                                <m:msub>
                                  <m:mi>R</m:mi>
